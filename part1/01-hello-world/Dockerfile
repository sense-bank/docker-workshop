FROM python:3.6
# Скачать с докерхаба базовый образ python версии 3.6. Все следующие команды выполняются ВНУТРИ образа
RUN mkdir /opt/app
# запустить внутри образа (!) команду на создание каталога / opt/app
WORKDIR /opt/app
# сделать этот каталог текущим. Аналог юникс-команды cd /opt/app
COPY hello.py /opt/app
# скопировать локальный файл в каталог внутри образа
CMD ["python", "hello.py"]
# запустить пайтон с нужными параметрами